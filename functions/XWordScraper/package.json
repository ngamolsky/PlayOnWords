{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "start": "concurrently \"tsc -w\" \"nodemon --watch ./build/ -- exec node -r yamlenv/config node_modules/@google-cloud/functions-framework --source=build/ --target=XWordScraper\" ",
    "deploy": "yarn build && gcloud functions deploy XWordScraper --runtime=nodejs16 --trigger-http"
  },
  "main": "build/index.js",
  "dependencies": {
    "axios": "^0.21.1",
    "firebase-admin": "^10.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "~1.9.0",
    "@types/uuid": "^8.3.0",
    "concurrently": "^7.0.0",
    "typescript": "^4.2.3",
    "yamlenv": "^1.0.0"
  },
  "private": true
}
