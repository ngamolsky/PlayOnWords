  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
